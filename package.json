{
  "name": "gitdiff-bc",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.1.0",
  "publisher": "sunbo008",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "beyond compare",
    "git",
    "diff",
    "compare",
    "merge"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.compareFileWithHead",
        "title": "%command.compareFileWithHead%"
      },
      {
        "command": "extension.compareFolderWithHead",
        "title": "%command.compareFolderWithHead%"
      },
      {
        "command": "extension.showLogFile",
        "title": "%command.showLogFile%"
      },
      {
        "command": "extension.openLogDirectory",
        "title": "%command.openLogDirectory%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.compareFileWithHead",
          "when": "!explorerResourceIsFolder",
          "group": "compare"
        },
        {
          "command": "extension.compareFolderWithHead",
          "when": "explorerResourceIsFolder",
          "group": "compare"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "beyondCompare.executablePath": {
          "type": "string",
          "default": "",
          "markdownDescription": "%configuration.executablePath.description%",
          "scope": "window",
          "order": 1
        },
        "beyondCompare.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "markdownDescription": "%configuration.logLevel.description%",
          "scope": "window",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --out dist/"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunbo008/gitdiff-bc"
  }
}
